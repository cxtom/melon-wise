
@require 'nib'

global-reset()

@require '../src/css/**'
@require './css/**'

body
html
    height: 100%
    background-color: #fbfbfb

#app
    main
        padding: 4em 2em 0 2em

    .row
        margin-bottom: 20px

.variant-bottom-1px-border
    position: relative

    &.variant-light:after
        background: #f3f3f3

    &:after
        content: ''
        display: block
        height: 1px
        background: #e5e5e5
        position: absolute
        width: 100%
        bottom: -1px
        left: 0
        z-index: 1

    @media screen and (-webkit-min-device-pixel-ratio: 1.5)
        &:after
            transform: scaley(0.5)
            transform-origin: 0 0
