@require "./base.styl"

.{$-melon-class-prefix}-monthpicker

    position: relative
    background-color: #fff
    height: 2.6em

    > label
        display: block
        color: #666
        position: absolute
        left: 1em
        top: 0
        line-height: 2.6em
        color: #666
        height: 100%
        font-size: (40 / 42)em

    &-result
        height: 100%
        line-height: 2.6
        color: #ff5a5f
        text-align: right
        padding-right: 1em

    &-popup .ui-popup-body
        padding: 0
        width: 100%
        bottom: 0
        top: auto
        left: 0
        right: 0
        border-radius: 0
        background-color: #f0f0f0

    &-panel
        height: 13em
        background-color: #fff
        position: relative
        box-sizing: content-box
        overflow-y: auto
        -webkit-overflow-scrolling: touch

    &-cancel
        margin-top: 0.5em
        height: 2.88em
        line-height: 2.88em
        text-align: center
        color: #333
        background-color: #fff
        font-size: (40 / 42)em