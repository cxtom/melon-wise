@import "./base.styl"

.{$-melon-class-prefix}-select
    position: relative
    background-color: #fff

    > select
        word-break: normal
        word-wrap: normal
        position: relative
        -webkit-appearance: none
        appearance: none
        display: inline-block
        padding: 0 28px 0 8px
        width: 100%
        height: 100%
        vertical-align: middle
        line-height: normal
        font-size: 14px
        color: #333
        background-color: transparent
        border: none
        border-radius: 0
        overflow: hidden
        outline: none
        opacity: 0
        z-index: 2

    &-result
        absolute: 0 0 0 0
        width: 100%
        height: 100%
        z-index: 1
        padding: 0 28px 0 8px
        text-align: right

    &:after
        content: '';
        display: block;
        height: 1px;
        background: #e5e5e5;
        position: absolute;
        width: 100%;
        bottom: -1px;
        left: 0;
        z-index: 1;

    @media screen and (-webkit-min-device-pixel-ratio: 1.5)
        &:after
            transform: scaley(0.5)
            transform-origin: 0 0

