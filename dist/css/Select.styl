@import "./base.styl"

.{$-melon-class-prefix}-select
    position: relative
    background-color: #fff

    > select
        word-break: normal
        word-wrap: normal
        position: relative
        -webkit-appearance: none
        appearance: none
        display: inline-block
        padding: 0 28px 0 8px
        width: 100%
        height: 100%
        vertical-align: middle
        line-height: normal
        font-size: 14px
        color: #333
        background-color: transparent
        border: none
        border-radius: 0
        overflow: hidden
        outline: none

    &:after
        content: '';
        display: block;
        height: 3px;
        background: #e5e5e5;
        position: absolute;
        width: 100%;
        bottom: 0;
        left: 0;
        z-index: 10;

    @media screen and (-webkit-min-device-pixel-ratio: 1.5)
        &:after
            -webkit-transform: scaley(0.5)
            transform: scaley(0.5)
            bottom: -1.5px

