@require "./base.styl"

.{$-melon-class-prefix}-mask

    position: fixed
    height: 100%
    width: 100%
    z-index: 9
    top: 0
    left: 0
    right: 0
    bottom: 0
    visibility: hidden
    opacity: 0
    -webkit-tap-highlight-color: $-melon-colors.transparent
    will-change: opacity
    transition: visibility 0ms cubic-bezier(0.23, 1, 0.32, 1) 400ms, opacity 400ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
    background-color: $-melon-colors.minBlack

    &.state-show
        visibility: visible
        opacity: 1
        will-change: opacity
        transition: visibility 0ms cubic-bezier(0.23, 1, 0.32, 1) 0ms, opacity 400ms cubic-bezier(0.23, 1, 0.32, 1) 0ms