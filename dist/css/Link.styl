@require "./base.styl"
@require "./Button.styl"

.{$-melon-class-prefix}-link
    color: $-melon-link.color
    text-decoration: none

    &:hover
        color: $-melon-link.states.hover.color

    &.variant-button

        {$-melon-button}

        melon-button-swatch($-melon-button-default)

        for $color-theme, $value in $-melon-button-color-themes
            &.variant-{$color-theme}
                melon-button-swatch($value)
                &.variant-raised
                    melon-button-swatch($value, true)

        &.variant-raised
            {$-melon-button-raised}
            &:disabled
                color: rgba(#000, .26) !important
                background-color: $-melon-colors.grey200 !important

    .{$-melon-class-prefix}-icon
        display: inline-block
        margin-right: 0.5em
        font-size: 1em
        line-height: 2em
        vertical-align: top

        & ~ span
            display: inline-block
            vertical-align: top
