@import "./base.styl"

.{$-melon-class-prefix}-select
    position: relative
    background-color: #fff

    > select
        word-break: normal
        word-wrap: normal
        position: relative
        -webkit-appearance: none
        appearance: none
        display: inline-block
        padding: 0 28px 0 8px
        width: 100%
        height: 100%;
        vertical-align: middle
        line-height: normal
        font-size: 14px
        color: #333
        background-color: transparent
        border: none
        border-bottom: 1px solid #eee
        border-radius: 0
        overflow: hidden
        outline: none