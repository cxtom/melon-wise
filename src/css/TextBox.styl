@import "./base.styl"

.{$-melon-class-prefix}-textbox
    position: relative
    background-color: #fff

    > input
        word-break: normal
        word-wrap: normal
        position: relative
        -webkit-appearance: none
        appearance: none
        display: inline-block
        padding: 0 28px 0 8px
        width: 100%
        height: 100%
        vertical-align: middle
        line-height: normal
        color: #333
        background-color: transparent
        border: none
        border-radius: 0
        overflow: hidden
        outline: none
        z-index: 10

    > label
        display: inline-block
        z-index: 1

    &:after
        content: '';
        display: block;
        height: 1px;
        background: #e5e5e5;
        position: absolute;
        width: 100%;
        bottom: -1px;
        left: 0;
        z-index: 1;

    @media screen and (-webkit-min-device-pixel-ratio: 1.5)
        &:after
            transform: scaley(0.5)
            transform-origin: 0 0

