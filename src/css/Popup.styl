@require "./base.styl"
@require "./Mask.styl"
@require "./Transitions.styl"

.{$-melon-class-prefix}-popup

    position: fixed
    box-sizing: border-box
    -webkit-tap-highlight-color: $-melon-colors.transparent
    z-index: 10
    top: 0
    left: 0
    width: 100%
    height: 100%
    overflow: auto
    opacity: 0
    visibility: hidden
    transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

    &.state-open
        opacity: 1
        visibility: visible

    &-body
        box-sizing: border-box
        -webkit-tap-highlight-color: $-melon-colors.transparent
        position: absolute
        max-width: 100%
        overflow-x: hidden
        top: 50%
        left: 50%
        transform: translate(50%, 50%)
        z-index: $-melon-z-index.dialog
        background-color: $-melon-colors.white
        box-shadow: 0 14px 45px rgba(0, 0, 0, 0.25), 0 10px 18px rgba(0, 0, 0, 0.22)
        border-radius: 2px
        padding: 1em