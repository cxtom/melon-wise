@require "./base.styl"

.ui-css-transition-group

    .transition-opacity-enter
        opacity: 0.01
        will-change: opacity
        &.transition-opacity-enter-active
            opacity: 1
            transition: opacity 300ms ease-in

    .transition-opacity-leave
        opacity: 1
        will-change: opacity
        &.transition-opacity-leave-active
            opacity: 0.01
            transition: opacity 300ms ease-in


    .transition-scale-enter
        transform: scale(0.01, 0.01)
        will-change: transform
        &.transition-scale-enter-active
            transform: scale(1, 1)
            transition: transform 300ms cubic-bezier(0.23, 1, 0.32, 1)

    .transition-scale-leave
        transform: scale(1, 1)
        will-change: transform
        &.transition-scale-leave-active
            transform: scale(0.01, 0.01)
            transition: transform 300ms cubic-bezier(0.23, 1, 0.32, 1)



    .transition-translate-bottom-enter
        transform: translate(0, 99%) translateZ(0)
        will-change: transform
    .transition-translate-bottom-enter-active
        transform: translate(0, 0) translateZ(0)
        transition: transform 300ms cubic-bezier(0.23, 1, 0.32, 1)

    .transition-translate-bottom-leave
        transform: translate(0, 0) translateZ(0)
        will-change: transform
     .transition-translate-bottom-leave-active
        transform: translate(0, 99%) translateZ(0)
        transition: transform 300ms cubic-bezier(0.23, 1, 0.32, 1)



    .transition-translate-top-enter
        transform: translate(0, -99%) translateZ(0)
        will-change: transform
        &.transition-translate-top-enter-active
            transform: translate(0, 0) translateZ(0)
            transition: transform 300ms cubic-bezier(0.23, 1, 0.32, 1)

    .transition-translate-top-leave
        transform: translate(0, 0) translateZ(0)
        will-change: transform
        &.transition-translate-top-leave-active
            transform: translate(0, -99%) translateZ(0)
            transition: transform 300ms cubic-bezier(0.23, 1, 0.32, 1)




    .transition-translate-left-enter
        transform: translate(-99%, 0) translateZ(0)
        will-change: transform
        &.transition-translate-left-enter-active
            transform: translate(0, 0) translateZ(0)
            transition: transform 600ms cubic-bezier(0.23, 1, 0.32, 1)

    .transition-translate-left-leave
        transform: translate(1%, 0) translateZ(0)
        will-change: transform
        &.transition-translate-left-leave-active
            transform: translate(100%, 0) translateZ(0)
            transition: transform 600ms cubic-bezier(0.23, 1, 0.32, 1)




    .transition-translate-right-enter
        transform: translate(99%, 0) translateZ(0)
        will-change: transform
        &.transition-translate-right-enter-active
            transform: translate(0, 0) translateZ(0)
            transition: transform 600ms cubic-bezier(0.23, 1, 0.32, 1)

    .transition-translate-right-leave
        transform: translate(-1%, 0) translateZ(0)
        will-change: transform
        &.transition-translate-right-leave-active
            transform: translate(-100%, 0) translateZ(0)
            transition: transform 600ms cubic-bezier(0.23, 1, 0.32, 1)
