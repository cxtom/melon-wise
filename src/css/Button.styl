@import "./base.styl"

$-melon-button = {

    display: inline-block
    box-sizing: border-box

    width: 100%
    height: 2.8em
    line-height: 2.8em
    vertical-align: middle

    font-size: $-melon-medium-font-size
    text-transform: uppercase
    text-align: center
    text-decoration: none
    font-weight: 400

    padding: 0
    margin: 0

    background-color: #fff
    border: 1px solid #d9d9d9
    border-bottom-color: #bababa

    outline: 0
    border-radius: 2px
}


.{$-melon-class-prefix}-button

    {$-melon-button}

    &.variant-primary
        background-color: #f8f8f8
        border-color: #d0d0d0
        border-bottom-color: #b2b2b2
        -webkit-box-shadow: 0 1px 1px 0 #e1e1e1
        box-shadow: 0 1px 1px 0 #e1e1e1

    &.variant-active
        border-color: $-melon-colors.blue700

    &.variant-primary.variant-active
        -webkit-box-shadow: none
        box-shadow: none
